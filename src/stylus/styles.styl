@import 'nib'

btn-pseudo-states(color, background, border)
    color color
    background-color background
    border-color border

    &:hover
    &:focus
    &:active
    &.active
        background-color darken(background, 5%)
        border-color darken(border, 10%)

body
    background url("../img/16_iii_export.jpg") no-repeat center center fixed
    background-size: cover;
    transition: all 0.3s ease-in-out;
    color #fff

    &.sound-correct
        box-shadow: inset 0 0 10em 0 rgba(137,185,8, 0.6);

    &.sound-wrong
        box-shadow: inset 0 0 10em 0 rgba(195,2,2,0.6);

.container
    text-align center

#root
    margin-top 15px

.login-box
    // width 300px
    height 300px
    margin-top 100px
    background-color rgba(0,0,0,0.4)
    border-radius 6px

h1
h2
.current-element
    color #fff
    word-wrap break-word

.current-element

    font-size 280px
    height 400px
    line-height 400px

    img
        vertical-align top

    canvas
        margin-top 5px

    &.words
        font-size 200px

.btn-transparent
    color #fff
    background-color rgba(0,0,0,0.6)
    border-color rgba(0,0,0,0)

    &:hover
    &:focus
    &:active
    &.active
        background-color rgba(0,0,0,0.7)
        border-color rgba(0,0,0,0)

.btn-toggle
    color #fff
    background-color rgba(24,24,24,0.6)
    border-color rgba(0,0,0,0)

    &:hover
    &:focus
    &:active
    &.active
        background-color rgba(24,24,24,0.8)
        border-color rgba(0,0,0,0)

.row + .row
.sequence
    margin-top 10px

.sound
    display none

.reset
    margin-top 0
    margin-bottom 10px

.instructions
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    color #fff
    height 100%
    padding 10px
    font-size 17px

    &.lead
        margin-bottom 0

.slider-box
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    color #fff
    padding-top 10px
    padding-bottom 10px

    span
        font-size 16px
        margin-right 35px

p:last-child
    margin-bottom 0px

p:first-child
    margin-bottom 17px

#intro
    display none

.stats
    transition: background-color 0.3s ease-in-out;
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    margin-top 10px
    font-size 18px
    padding 6px 0
    color #fff

    span:not(.statistic)
        margin-right 10px

    span.statistic
        margin-right 0
        font-size 22px

        span
            margin-right 0

.sequence
    transition: background-color 0.3s ease-in-out;
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    margin-bottom 10px

    div
        overflow hidden

    &.empty
        background-color rgba(0,0,0,0)


.facebookLogin
.googleplusLogin
    font-family "HelveticaNeue", sans-serif
    font-weight 800
    width 420px
    height 60px
    position absolute
    top 50%
    left 50%
    margin-top -108px
    margin-left -200px
    font-size 36px
    border 1px solid #333
    padding 0 20px
    line-height 60px
    border-radius 5px
    background #3B5998
    color #fff
    text-shadow -1px -1px 1px rgba(0, 0, 0, 0.3)
    box-shadow 2px 2px 2px rgba(59, 89, 152, 0.6), 3px 3px 12px black
    cursor pointer
    text-align center
    transition: box-shadow 0.2s ease-out, text-shadow 0.2s ease-out, background 0.2s ease-out;

    a
        color #fff

        &:hover
            text-decoration none
            color #fff


.normalLogin
    margin-top 260px
    font-size 16px

    a
        color #fff

        &:hover
            color #fff

