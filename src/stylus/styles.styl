@import 'nib'

btn-pseudo-states(color, background, border)
    color color
    background-color background
    border-color border

    &:hover
    &:focus
    &:active
    &.active
        background-color darken(background, 5%)
        border-color darken(border, 10%)

body
    background url("../img/16_iii_export.jpg") no-repeat center center fixed
    background-size: cover;
    transition: all 0.3s ease-in-out;

    &.sound-correct
        box-shadow: inset 0 0 10em 0 rgba(137,185,8, 0.6);

    &.sound-wrong
        box-shadow: inset 0 0 10em 0 rgba(195,2,2,0.6);

.container
    text-align center

h1
h2
.current-element
    color #fff
    word-wrap break-word

.current-element

    font-size 280px
    height 400px
    line-height 400px

    img
        vertical-align top

    canvas
        margin-top 5px

    &.words
        font-size 200px

.btn-transparent
    color #fff
    background-color rgba(0,0,0,0.6)
    border-color rgba(0,0,0,0)

    &:hover
    &:focus
    &:active
    &.active
        background-color rgba(0,0,0,0.7)
        border-color rgba(0,0,0,0)

.btn-toggle
    color #fff
    background-color rgba(24,24,24,0.6)
    border-color rgba(0,0,0,0)

    &:hover
    &:focus
    &:active
    &.active
        background-color rgba(24,24,24,0.8)
        border-color rgba(0,0,0,0)

.row + .row
.sequence
    margin-top 10px

.sound
    display none

.reset
    margin-top 0
    margin-bottom 10px

.instructions
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    color #fff
    height 100%
    padding 10px
    font-size 17px

    &.lead
        margin-bottom 0

.slider-box
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    color #fff
    padding-top 10px
    padding-bottom 10px

    span
        font-size 16px
        margin-right 35px

p:last-child
    margin-bottom 0px

p:first-child
    margin-bottom 17px

#intro
    display none

.stats
    transition: background-color 0.3s ease-in-out;
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    margin-top 10px
    font-size 18px
    padding 6px 0
    color #fff

    span:not(.statistic)
        margin-right 10px

    span.statistic
        margin-right 0
        font-size 22px

        span
            margin-right 0

.sequence
    transition: background-color 0.3s ease-in-out;
    background-color rgba(0,0,0,0.4)
    border-radius 6px
    margin-bottom 10px

    div
        overflow hidden

    &.empty
        background-color rgba(0,0,0,0)